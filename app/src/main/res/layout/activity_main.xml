<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tictactoe.MainActivity">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#030506">

            <Button
                android:id="@+id/cell_00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginRight="@dimen/cell_right_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size"/>

            <Button
                android:id="@+id/cell_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginLeft="@dimen/cell_left_margin"
                android:layout_marginRight="@dimen/cell_right_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

            <Button
                android:id="@+id/cell_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginLeft="@dimen/cell_left_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#030506">

            <Button
                android:id="@+id/cell_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginRight="@dimen/cell_right_margin"
                android:layout_marginTop="@dimen/cell_top_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

            <Button
                android:id="@+id/cell_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginLeft="@dimen/cell_left_margin"
                android:layout_marginRight="@dimen/cell_right_margin"
                android:layout_marginTop="@dimen/cell_top_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

            <Button
                android:id="@+id/cell_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginLeft="@dimen/cell_left_margin"
                android:layout_marginTop="@dimen/cell_top_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#030506">

            <Button
                android:id="@+id/cell_20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginRight="@dimen/cell_right_margin"
                android:layout_marginTop="@dimen/cell_top_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

            <Button
                android:id="@+id/cell_21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginLeft="@dimen/cell_left_margin"
                android:layout_marginRight="@dimen/cell_right_margin"
                android:layout_marginTop="@dimen/cell_top_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

            <Button
                android:id="@+id/cell_22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cell_bottom_margin"
                android:layout_marginLeft="@dimen/cell_left_margin"
                android:layout_marginTop="@dimen/cell_top_margin"
                android:layout_weight="1"
                android:background="@drawable/tic_tac_toe_cell_xxxhdpi"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/cell_text_size" />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cell_bottom_margin"
            android:layout_marginLeft="@dimen/cell_left_margin"
            android:layout_marginTop="@dimen/cell_top_margin"
            android:layout_toLeftOf="@+id/text_view_p2"
            android:freezesText="true"
            android:text="1st Player: 0"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/cell_bottom_margin"
            android:layout_marginRight="@dimen/cell_right_margin"
            android:layout_marginTop="@dimen/cell_top_margin"
            android:freezesText="true"
            android:text="2nd Player: 0"
            android:textSize="25sp" />
    </RelativeLayout>

        <Button
            android:id="@+id/button_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#F05A28"
            android:gravity="center"
            android:padding="10dp"
            android:text="Restart"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="sans" />

</LinearLayout>